<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- Log file location shared with Filebeat -->
    <property name="LOGS" value="H:/study/elasticsearch/logs" />

    <!-- Rolling File Appender -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS}/app.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOGS}/app.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- GLOBAL LOG LEVEL -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

    <!-- Hibernate SQL logging -->
    <logger name="org.hibernate.SQL" level="TRACE" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Hibernate parameter binding -->
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Spring internal logs -->
    <logger name="org.springframework" level="TRACE" />
    <logger name="org.springframework.web" level="TRACE" />
    <logger name="org.springframework.security" level="TRACE" />

    <!-- Monitoring slow SQL -->
    <logger name="org.hibernate.engine.jdbc.spi.SqlExceptionHelper" level="TRACE" />

</configuration>
